<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="course.android.com.npuapplication.AdmissionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="0"
                android:layout_gravity="left"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Apply Year Term :"
android:textStyle="bold"
                android:textSize="18dp"
                />
            <TextView
android:layout_weight="0"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:id="@+id/txt_add_appyear"
android:textStyle="italic"
                android:text="2016 Fall"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="0"
                android:layout_gravity="left"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Apply Program :"
                android:textStyle="bold"
                android:textSize="18dp"
               />
            <TextView
                android:layout_weight="0"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:id="@+id/txt_add_program"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic"
                android:text="Master of Science in Computer Science (MSCS)"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="left"
                android:layout_weight="0"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Application Form :"
                android:textStyle="bold"
                android:textSize="18dp"
                />
            <TextView
                android:layout_weight="0"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:id="@+id/txt_add_appform"
                android:textStyle="italic"
                android:textColor="@android:color/background_dark"
                android:text="Done"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="0"
                android:layout_gravity="left"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Admission Decision:"
                android:textStyle="bold"
                android:textSize="18dp"
                />
            <TextView
                android:layout_weight="0"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:id="@+id/txt_add_decsion"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic"
                android:text="Accepted"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="left"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Current Stage:"
                android:textStyle="bold"
                android:textSize="18dp"
                />
            <TextView

                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:id="@+id/txt_add_curStage"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic"
                android:text="Student - Active"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:text="Admission Documents"
    android:paddingLeft="70dp"
    android:textStyle="bold"
    android:textSize="20dp"
    android:textColor="@color/colorPrimary"/>
            <TableLayout
android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:stretchColumns="*">

                <TableRow android:layout_width="0dp" >
<TextView
    android:text="Meet"
    android:layout_gravity="center"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="17dp"
    android:textColor="@android:color/background_dark"

    />
                    <TextView
                        android:layout_gravity="center"
                        android:text="Required Document Name"
                        android:layout_width="470px"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="@android:color/background_dark"/>
                    <TextView

                        android:layout_gravity="center"
                        android:text="Received Date"
                        android:layout_width="300px"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="@android:color/background_dark"/>

                </TableRow>
                <TableRow android:layout_width="0dp">
                    <ImageView
                        android:src="@drawable/ic_done"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="Passport Copy or Government Issued ID"
                        android:layout_width="420px"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_gravity="center"
                        android:text="5/12/2016 \n 11:45:35 AM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </TableRow>
                <TableRow android:layout_width="0dp">
                    <ImageView
                        android:src="@drawable/ic_done"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="Financial Support Document"
                        android:layout_width="420px"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_gravity="center"
                        android:text="9/14/2016  \n 12:00:00 AM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </TableRow>
                <TableRow android:layout_width="0dp">
                    <ImageView
                        android:src="@drawable/ic_done"/>
                    <TextView
                        android:layout_gravity="left"
                        android:text="Visa Copy"
                        android:layout_width="420px"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_gravity="center"
                        android:text="5/12/2016 \n 11:45:35 AM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </TableRow>
            </TableLayout>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>
