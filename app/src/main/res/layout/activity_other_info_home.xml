<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_expanded_controller_ad_label_background_color"
    tools:context="course.android.com.npuapplication.OtherInfoHome">

    <GridLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="60dp">

        <Button
            android:id="@+id/libBtn"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@color/colorPrimary"
            android:text="E-Library" />

        <Button
            android:id="@+id/mapBtn"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_column="0"
            android:layout_row="0"
            android:alpha="0.7"
            android:text="Campus Map" />

        <Button
            android:id="@+id/eatBtn"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_column="0"
            android:layout_row="2"
            android:alpha="0.7"
            android:background="@color/colorAccent"
            android:text="Eateries" />

        <Button
            android:id="@+id/transportBtn"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_column="0"
            android:layout_row="3"
            android:alpha="0.7"
            android:background="@color/cast_intro_overlay_button_background_color"
            android:text="Transportation" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
